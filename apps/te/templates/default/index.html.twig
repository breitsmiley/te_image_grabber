                <input type="number" min="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" step="1" class="form-control" id="validationCustom02" value="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" required>
{#                <div class="valid-feedback">#}
{#                    Looks good!#}
{#                </div>#}
                <div class="invalid-feedback">
                    Please choose correct Height.
                </div>
            </div>
        </div>
{#        <button class="btn btn-primary" type="submit">Submit form</button>#}

        <button class="btn btn-primary" type="submit" disabled>
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            GO!
        </button>


    </form>

