{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app.js') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app.css') }}
{% endblock %}

{% block title %}Images Grabber{% endblock %}

{% block body %}
<div class="app-block" id="imageControlSection">

    <div id="appImageControlResult" class="alert alert-success" role="alert"></div>

    <form id="appImageControlForm" class="needs-validation" novalidate>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationCustom01">URL</label>
                <input type="url" class="form-control" id="validationCustom01" name="url" value="https://tile.expert" required>
                <div class="valid-feedback">

                </div>
                <div class="invalid-feedback">
                    Please choose correct URL.
                </div>
            </div>
            <div class="col-md-1 mb-3">
                <label for="validationCustom02">Min Width</label>
                <input type="number" min="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" step="1" name="minWidth" class="form-control" id="validationCustom02" value="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" required>
                <div class="valid-feedback">

                </div>
                <div class="invalid-feedback">
                    Please choose correct Width.
                </div>
            </div>
            <div class="col-md-1 mb-3">
                <label for="validationCustom02">Min Height</label>
                <input type="number" min="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" step="1" name="minHeight" class="form-control" id="validationCustom02" value="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" required>
                <div class="valid-feedback">

                </div>
                <div class="invalid-feedback">
                    Please choose correct Height.
                </div>
            </div>
        </div>

        <button class="btn btn-primary" type="submit">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            GO!
        </button>
    </form>
</div>

<div class="app-block" id="imageGridSection">
    <div id="imageGrid" class="row">
        {% include('default/_image_grid.html.twig') %}
    </div>
</div>
{% endblock %}
