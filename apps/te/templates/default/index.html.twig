                </div>
            </div>
            <div class="col-md-1 mb-3">
                <label for="validationCustom02">Min Width</label>
                <input type="number" min="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" step="1" class="form-control" id="validationCustom02" value="{{ constant('App\\Service\\ImageManager::CROP_SIZE')}}" required>
{#                <div class="valid-feedback">#}
{#                    Looks good!#}
{#                </div>#}
